{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@common/*": ["../common/*"],
            "@config/*": ["./config/*"],
            "@routes/*": ["./routes/*"],
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}