{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@common/*": ["../common/*"],
            "@config/*": ["./config/*"],
            "@routes/*": ["./routes/*"],
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"],
            "*": ["node_modules/*", "types/*"]
        }
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
}